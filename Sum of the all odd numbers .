import java.util.Scanner;

public class SumofallOddnumbers {
    public static void main(String[] args) {
        SumofallOddnumbers.sumforOddnumbers();
    }
    public static void sumforOddnumbers() {
        Scanner input = new Scanner(System.in);
        System.out.print("Enter the number: ");
        int num = input.nextInt();
        int sum = 0;

        for (int i = 1; i <= num; i++){
            if (i % 2 != 0){
                sum += i;
            }

        }
        System.out.println("The sum of odd numbers between the given number is :"+sum);
    }

}
